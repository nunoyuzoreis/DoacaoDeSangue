<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/action_menu_funcionario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        fab:fab_labelStyle="@style/menu_labels_style"
        fab:fab_addButtonColorNormal="@color/red_menu"
        fab:fab_addButtonColorPressed="@color/red_pressed"
        fab:fab_addButtonPlusIconColor="@color/white">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_registrar_doador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/red_pressed"
            fab:fab_title="@string/registrar_doador"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_registrar_doacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/red_pressed"
            fab:fab_title="@string/registrar_doacao"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_registrar_exames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/red_pressed"
            fab:fab_title="@string/registrar_exames"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/action_registrar_bolsa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_24dp"
            fab:fab_colorNormal="@color/red"
            fab:fab_colorPressed="@color/red_pressed"
            fab:fab_title="@string/registrar_bolsa"/>


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
